@{
    Layout = "_Layout";
}
<h3>Create File</h3>

<form asp-action="Create" asp-controller="File" method="post">
    <div class="form-control">
        <label>
            File Name: <span class="text-danger">*</span>
        </label>
        <input name="fileName" class="form-control" type="text" required/>
    </div>
    <div class="form-control">
        <label>
            File Content: <span class="text-danger">*</span>
        </label>
        <textarea name="fileContent" class="form-control" type="text"></textarea>
    </div>
    <div class="form-group text-right">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>