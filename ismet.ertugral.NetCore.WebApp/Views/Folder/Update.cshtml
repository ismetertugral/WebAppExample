@model DirectoryInfo
@{
    Layout = "_Layout";
}
<h3>Update Folder</h3>

<form asp-action="Update" asp-controller="Folder" method="post">
    <input type="hidden" name="oldFolderName" value="@Model.Name" />
    <div class="form-control">
        <label>
            Folder Name: <span class="text-danger">*</span>
        </label>
        <input name="newFolderName" class="form-control" type="text" required value="@Model.Name" />
    </div>
    <div class="form-group text-right">
        <button type="submit" class="btn btn-primary">Update</button>
    </div>
</form>